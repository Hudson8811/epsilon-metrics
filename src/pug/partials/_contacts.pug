section.contacts
  .container
    .contacts__heading
      h2.title.contacts__title
        | ДЕМОНСТРАЦИЯ EPSILON METRICS
      
      p.contacts__description
        | Запланируйте встречу с нашими экспертами, чтобы поговорить об использовании пространственного анализа Вашем бизнесе.
    
    form(action="https://echo.htmlacademy.ru" method="POST").form.contacts__form
      input(type="hidden" name='contacts')

      .form-wrapper
        -
          const blocks = [
            {
              mod: 'input',
              type: 'text',
              name: 'name',
              placeholder: 'Имя*',
              required: true,
            },
            {
              mod: 'input',
              type: 'text',
              name: 'surname',
              placeholder: 'Фамилия*',
              required: true,
            },
            {
              mod: 'input',
              type: 'email',
              name: 'email',
              placeholder: 'Рабочий email*',
              required: true,
            },
            {
              mod: 'input',
              type: 'tel',
              name: 'tel',
              placeholder: 'Номер телефона',
              required: false,
            },
            {
              mod: 'input',
              type: 'text',
              name: 'company',
              placeholder: 'Компания',
              required: false,
            },
            {
              mod: 'input',
              type: 'select',
              name: 'subject',
              options: [
                { value: 'null', text: 'Подразделение / Направление' },
                { value: '1', text: '1' },
                { value: '2', text: '2' },
              ],
            },
            {
              mod: 'privacy',
            },
            {
              mod: 'button',
              type: 'submit',
            }
          ];
        each item in blocks
          .form__group
            if item.mod === 'input'
              if item.type !== 'select'
                input(type=item.type placeholder=item.placeholder name=item.name required=item.required?true:false).form__group-item.form__input
              else
                .form__select
                  .form__select-arrow
                    svg(width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg")
                      path(d="M8.59298 11.9476L2.61922 5.67796C2.5195 5.57335 2.46387 5.43436 2.46387 5.28983C2.46387 5.1453 2.5195 5.00632 2.61922 4.90171L2.62597 4.89496C2.67432 4.84407 2.73251 4.80354 2.79701 4.77585C2.86151 4.74816 2.93097 4.73388 3.00116 4.73388C3.07135 4.73388 3.14081 4.74816 3.20531 4.77585C3.26981 4.80354 3.328 4.84407 3.37635 4.89496L9.00135 10.799L14.6241 4.89496C14.6724 4.84407 14.7306 4.80354 14.7951 4.77585C14.8596 4.74816 14.9291 4.73388 14.9993 4.73388C15.0695 4.73388 15.1389 4.74816 15.2034 4.77585C15.2679 4.80354 15.3261 4.84407 15.3745 4.89496L15.3812 4.90171C15.481 5.00632 15.5366 5.1453 15.5366 5.28983C15.5366 5.43436 15.481 5.57335 15.3812 5.67796L9.40748 11.9476C9.35494 12.0027 9.29176 12.0466 9.22175 12.0766C9.15175 12.1066 9.07638 12.1221 9.00023 12.1221C8.92407 12.1221 8.8487 12.1066 8.7787 12.0766C8.70869 12.0466 8.64551 12.0027 8.59298 11.9476Z" fill="black")
                  select(name=item.name).form__group-item.form__input.form__select-input
                    each option in item.options
                      option(value=option.value selected=option.selected?true:false).form__select-option=option.text?option.text:option.value 
            else if item.mod === 'privacy'
              label.checkbox.form__checkbox Подтверждение использования данных
                input(type="checkbox" name="privacy" required).checkbox__input
                span.checkbox__checkmark
            else if item.mod === 'button'
              button(type=item.type?item.type:'submit').button.form__group-item.form__button
                | Отправить

    