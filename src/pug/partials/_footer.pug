footer.footer
  .container
    .footer-wrapper
      a(href="./").logo.footer__logo
        img(src="./images/logo.png", alt="EPSILON METRICS").logo__item
      
      .footer-nav.footer__nav
        -
          const lists = [
            {
              title: 'Информация', 
              links: [
                { text: 'Возможности' },
                { text: 'Как это работает' },
                { text: 'Применение' },
                { text: 'Демонстрация' },
              ],
            },
            {
              title: 'Продукты', 
              links: [
                { text: 'Платформа для ML разработки' },
                { text: 'Геопространственная аналитика' },
                { text: 'Интерактивнаявизуализация' },
                { text: 'Data as a Service' },
                { text: 'Platform as a Service' },
                { text: 'Infrastructure as a Service' },
                { text: 'Инструменты для сбора данных' },
                { text: 'Интеграционные решения' },
              ],
            },
            {
              title: 'Отрасли', 
              links: [
                { text: 'Банки и финансы' },
                { text: 'Страхование' },
                { text: 'Телеком' },
                { text: 'Государственные услуги' },
                { text: 'Недвижимость' },
                { text: 'Логистика и транспорт' },
                { text: 'Промышленное производство' },
                { text: 'Энергетика, коммунальные услуги и ресурсы' },
              ],
            },
            {
              title: 'Компания', 
              links: [
                { text: 'О компании' },
                { text: 'Юридические документы' },
                { text: 'Вакансии' },
                { text: 'Техническая документация' },
                { text: 'Кейсы' },
                { text: 'Блог' },
              ],
            },
          ];
        each list, index in lists
          section.footer-nav__section(class=(index === 1)?'large':'')
            h3.footer-nav__title=list.title

            ul.footer-nav__list
              each item in list.links
                li.footer-nav__item
                  a(href=item.href?item.href:'#').link.footer-nav__link=item.text 

  .footer-bar
    .container
      .footer-bar__wrapper
        span.footer-bar__section
